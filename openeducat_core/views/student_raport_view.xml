<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="raport_smart_button" model="ir.ui.view">
            <field name="name">raport.smart.buttons</field>
            <field name="model">op.student</field>
            <field name="inherit_id" ref="openeducat_core.view_op_student_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='smart_button']" position="inside">
                    <button class="btn oe_stat_button"
                            type="object"
                            name="get_raport"
                            style="border-right: 1px solid;"
                            icon="fa-newspaper-o">
                        <field string="Raport" name="raport_count" widget="statinfo"/>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
