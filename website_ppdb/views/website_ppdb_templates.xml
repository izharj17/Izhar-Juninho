<odoo>
    <template id="ppdb_form_template" name="PPDB Form Template">
        <t t-call="website.layout">
            <div class="container mt32 mb32">
                <h1>PPDB Formulir Pendaftaran</h1>
                <form action="/ppdb/submit" method="post">
                    <!-- Nama Lengkap -->
                    <div class="form-group">
                        <label for="nama_lengkap">Nama Lengkap Siswa</label>
                        <input type="text" name="nama_lengkap" class="form-control" required="True"/>
                    </div>
                    <!-- Nama Panggilan -->
                    <div class="form-group">
                        <label for="nama_panggilan">Nama Panggilan</label>
                        <input type="text" name="nama_panggilan" class="form-control" required="True"/>
                    </div>
                    <!-- Jenis Kelamin -->
                    <div class="form-group">
                        <label for="jenis_kelamin">Jenis Kelamin</label>
                        <select name="jenis_kelamin" class="form-control" required="True">
                            <option value="laki-laki">Laki - Laki</option>
                            <option value="perempuan">Perempuan</option>
                        </select>
                    </div>
                    <!-- NISN -->
                    <div class="form-group">
                        <label for="nisn">NISN</label>
                        <input type="text" name="nisn" class="form-control"/>
                    </div>
                    <!-- NIK -->
                    <div class="form-group">
                        <label for="nik">NIK</label>
                        <input type="text" name="nik" class="form-control"/>
                    </div>
                    <!-- Tempat Lahir -->
                    <div class="form-group">
                        <label for="tempat_lahir">Tempat Lahir</label>
                        <input type="text" name="tempat_lahir" class="form-control"/>
                    </div>
                    <!-- Tanggal Lahir -->
                    <div class="form-group">
                        <label for="tgl_lahir">Tanggal Lahir</label>
                        <input type="date" name="tgl_lahir" class="form-control"/>
                    </div>
                    <!-- Akte -->
                    <div class="form-group">
                        <label for="akte">Nomor Akta Kelahiran</label>
                        <input type="text" name="akte" class="form-control"/>
                    </div>
                    <!-- Agama -->
                    <div class="form-group">
                        <label for="agama">Agama</label>
                        <select name="agama" class="form-control">
                            <option value="islam">Islam</option>
                            <option value="kristen">Kristen</option>
                            <option value="katolik">Katolik</option>
                            <option value="buddha">Buddha</option>
                            <option value="hindu">Hindu</option>
                            <option value="konguchu">Konguchu</option>
                        </select>
                    </div>
                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </t>
    </template>

    <template id="ppdb_success_template" name="PPDB Success Template">
        <t t-call="website.layout">
            <div class="container mt32 mb32">
                <h1>Terima Kasih!</h1>
                <p>Data pendaftaran PPDB Anda telah berhasil disimpan.</p>
            </div>
        </t>
    </template>
</odoo>