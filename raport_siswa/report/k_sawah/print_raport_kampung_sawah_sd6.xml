                                    <t t-foreach="o.proyek_siswa_ids" t-as="line">
                                        <tr>
                                            <td><span t-field="line.jenis_proyek"/></td>
                                            <td><span t-field="line.nama"/></td>
                                            <td><span t-field="line.deskripsi"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>

                    <!-- BTQ -->

                    
                    <div style="page-break-inside: avoid; margin-top: 35px;">
