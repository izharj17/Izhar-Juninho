                                <td class="invisible-column"></td> <!-- Invisible column -->
                                <td class="large-cell kepala-sekolah" style="width: 50px;"></td>
                            </tr>
                            <tr>
                                <td class="large-cell orang-tua " style = "height: 12px; line-height: 20px;"> <span t-field="o.ttd_ortu"/> </td>
