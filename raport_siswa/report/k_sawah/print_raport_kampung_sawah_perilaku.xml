                        <div class="footer">
                            <div class="row">

                                <div style="position: absolute; left: 51%;">
                                    <span class="page" />
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
