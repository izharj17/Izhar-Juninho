<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_master_program_wakaf_tree" model="ir.ui.view">
            <field name="name">master.program.wakaf.tree</field>
            <field name="model">master.program.wakaf</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Master Program Wakaf">
                    <field name="nama_program_wakaf"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <record id="view_master_program_wakaf_form" model="ir.ui.view">
            <field name="name">master.program.wakaf.form</field>
            <field name="model">master.program.wakaf</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Master Program Wakaf">
                    <sheet>
                        <group col="4">
                            <field name="nama_program_wakaf"/>
                            <field name="code"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                        <field name="activity_ids" widget="mail_activity"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_master_program_wakaf_search" model="ir.ui.view">
            <field name="name">master.program.wakaf.search</field>
            <field name="model">master.program.wakaf</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Master Program Wakaf">
                    <field name="nama_program_wakaf"/>
                    <field name="code"/>
                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter string="Program Wakaf" name="group_by_master_program_wakaf_nama_program_wakaf"
                                domain="[]" context="{'group_by':'nama_program_wakaf'}"/>
                        <filter string="code" name="group_by_master_program_wakaf_code"
                                domain="[]" context="{'group_by':'code'}"/>
<!--                        <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>-->
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_master_program_wakaf_view">
            <field name="name">Master Program Wakaf</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">master.program.wakaf</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_master_program_wakaf_search"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_master_program_wakaf_view_form">
            <field name="act_window_id" ref="act_master_program_wakaf_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_master_program_wakaf_form"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_master_program_wakaf_view_tree">
            <field name="act_window_id" ref="act_master_program_wakaf_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_master_program_wakaf_tree"/>
        </record>

        <menuitem id="menu_master_program_wakaf_details"
                    name="Program Wakaf"
                    parent="menu_master_wakaf"
                    sequence="10"
                    action="act_master_program_wakaf_view"/>

    </data>
</odoo>